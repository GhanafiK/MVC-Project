
@model EmployeeViewModel

@{
	ViewData["Title"] = "Edit";
}


<div class="row justify-content-center align-content-center mt-3">
	<h1 class="col-8 my-4">Edit Employee</h1>
	<div class="col-8">
		@if (!string.IsNullOrEmpty(Model.ImageName))
		{
			<div class="col-2 mb-3">
				<img class="w-100 rounded" src="~/Files/Images/@Model.ImageName" />
			</div>
		}
		else
		{
			<p>No image Founded</p>
		}
	</div>
	

	<form method="post" asp-controller="Employees" asp-action="Edit" class="row col-8 " enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly"></div>

		<partial name="PartialViews/_CreatedEditPartialView" />

		<div class="mt-4 m-auto">
			<input class="btn btn-success" type="submit" value="Save" />
			<a asp-controller="Employees" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
		</div>
	</form>
</div>

@section ValidationScripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
