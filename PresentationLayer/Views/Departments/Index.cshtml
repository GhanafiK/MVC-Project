@model IEnumerable<DepartmentDTO>
@{
    ViewData["Title"] = "Index";
}

<h1 class="my-3">All Departments</h1>

<a class="btn btn-primary my-2" asp-controller="Departments" asp-action="Create">Create New Department</a>

@if(Model.Any()){
    <table class="table table-striped table-hover">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D=>D.Description)</th>
                <th>@Html.DisplayNameFor(D=>D.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        @foreach (var department in Model)
        {
            <tbody class="text-center">
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.Description</td>
                    <td>@department.DateOfCreation</td>
                    <td><a class="btn btn-primary" asp-action="Details" asp-route-Id="@department.Id"><i class="fas fa-eye"></i> Details</a></td>
                    <td><a class="btn btn-success" asp-action="Edit" asp-route-Id="@department.Id"><i class="fas fa-edit "></i> Edit</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-Id="@department.Id"><i class="fas fa-trash"></i> Delete</a></td>
                </tr>
            </tbody>
        }
    </table>
    
}
else{
    <div class="alert alert-info mt-2">
        <h2>No Department Found !!!</h2>
    </div>
}
