@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}


<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-12 my-4">Edit @Model.Name Role</h1>
    <div class="form-group mb-3">
        <label class="form-label" asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly/>
    </div>
    <form method="post" asp-controller="Roles" asp-action="Edit" class="col-12">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <h3>Assign Users To @Model.Name Role</h3>
        <div class="form-group mb-3">
            @for(int i=0;i<Model.Users.Count;i++){
                <div class="form-check">
                    <input type="hidden" asp-for="Users[i].UserId" />
                    <input type="hidden" asp-for="Users[i].UserName" />
                    <input asp-for="Users[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label">@Model.Users[i].UserName</label>
                </div>
            }
        </div>
        
        <div class="mt-4 m-auto">
            <input class="btn btn-warning" type="submit" value="Save" />
            <a asp-controller="Roles" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>
