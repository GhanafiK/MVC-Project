@model RoleViewModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="my-5 w-75">@Model.Name Details</h1>


<ul class="nav nav-tabs" id="RolesTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

        <div class="row">
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Id"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <h6 class="my-2 text-info">Users Who Are Assigned to the <span class="text-decoration-underline">@Model.Name</span> Role</h6>
            <div class="form-group mb-3">

                @{
                    bool anyUserSelected = Model.Users.Any(u => u.IsSelected);
                }
                @if (!anyUserSelected)
                {
                    <p><i class="fa-solid fa-exclamation fa-bounce text-danger"></i> This role is not assigned to any user <i class="fa-solid fa-exclamation fa-bounce text-danger"></i></p>
                }else{
                    @for (int i = 0; i < Model.Users.Count; i++)
                    {
                        if (Model.Users[i].IsSelected)
                        {
                            <p class="mb-1"> <i class="fa-solid fa-user text-warning"></i>  @Model.Users[i].UserName</p>
                        }
                    }
                }
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
    </div>
</div>


