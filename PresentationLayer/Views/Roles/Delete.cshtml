@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class="my-5 m-auto">Are You Sure You Want To Delete @Model.Name Role ?</h1>
<div asp-validation-summary="ModelOnly"></div>

<ul class="nav nav-tabs" id="UserTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

        <div class="row">
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Id"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
        </div>
    </div>

    <div class="mt-4">
        <form method="post" asp-controller="Roles" asp-action="ConfirmDelete" asp-route-id="@Model.Id">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
        </form>
    </div>
</div>

