@using PresentationLayer.ViewModels.AccountViewModel
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top" >
        <form asp-action="Login" method="post"  >
            <div asp-validation-summary="ModelOnly"></div>

            <input asp-for="Email" placeholder="Email" required="">
            <span asp-validation-for="Email"></span>
            <br />
            <input asp-for="Password" placeholder="Password" required="">
            <span asp-validation-for="Password"></span>
            <br />

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="RememberMe" class="checkbox" required>
                    <span>Keep Me Signed In</span>
                </label>
                <div class="clear"> </div>
            </div>
            <span asp-validation-for="RememberMe"></span>
            <input type="submit" value="SIGNIN" >
            
            
        </form>
        <p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
        <p> <a asp-action="ForgetPassword">Forget Password</a></p>
        <p class="my-2 fw-bold text-black">OR</p>
        <div class="text-center">
            <a asp-action="GoogleLogin" class="btn btn-light"><i class="fa-brands fa-google text-danger"></i>   Login With Google </a>
        </div>

    </div>
</div>


