@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>
<br />
<br />

<div class="m-2">
    <form asp-action="index" class="row offset-2" method="get">
        <div class="col-8">
            <input class="form-control" type="text" name="UserSearchName" placeholder="User's Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-outline-success" value="Search" />
        </div>
    </form>

</div>


@if (Model.Any())
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(u => u.ID)</th>
                <th>@Html.DisplayNameFor(u => u.FirstName)</th>
                <th>@Html.DisplayNameFor(u => u.LastName)</th>
                <th>@Html.DisplayNameFor(u => u.Email)</th>
                <th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(u => u.Roles)</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.ID</td>
                    <td>@User.FirstName</td>
                    <td>@User.LastName</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join(",", User.Roles)</td>

                    <td><a asp-action="Details" asp-route-id="@User.ID"><i class="fas fa-eye text-info"></i> </a></td>
                    <td><a asp-action="Edit" asp-route-Id="@User.ID"><i class="fas fa-edit text-warning"></i> </a></td>
                    <td><a  asp-action="Delete" asp-route-Id="@User.ID"><i class="fas fa-trash text-danger"></i> </a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Users Found !!</h2>
    </div>
}


