@model UserDetailsViewModel
@{
    ViewData["Title"] = "Edit";
}


<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-12 my-4">Edit @Model.FirstName @Model.LastName User</h1>
    <form method="post" asp-controller="Users" asp-action="Edit" class="col-12">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mt-4 m-auto">
            <input class="btn btn-warning" type="submit" value="Save" />
            <a asp-controller="Users" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>

